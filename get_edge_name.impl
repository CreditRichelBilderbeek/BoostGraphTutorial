#include <string>
#include <boost/graph/graph_traits.hpp>
#include <boost/graph/properties.hpp>

///Get an edge its name from itsedge descriptor
///TODO: remove the hard-coded std::string type
template <typename graph>
std::string get_edge_name(
  const typename boost::graph_traits<graph>::edge_descriptor& ed,
  const graph& g
) noexcept
{
  const auto edge_name_map
    = get( //not boost::get
      boost::edge_name,
      g
    );
  return edge_name_map[ed];
}
