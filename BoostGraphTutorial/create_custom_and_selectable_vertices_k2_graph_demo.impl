#include <cassert>
#include "create_custom_and_selectable_vertices_k2_graph.h"
#include "has_custom_vertex_with_my_vertex.h"

void create_custom_and_selectable_vertices_k2_graph_demo() noexcept
{
  const auto g = create_custom_and_selectable_vertices_k2_graph();
  assert(boost::num_edges(g) == 1);
  assert(boost::num_vertices(g) == 2);
  assert(has_custom_vertex_with_my_custom_vertex(
    my_custom_vertex("A", "source" ,0.0, 0.0), g)
  );
  assert(has_custom_vertex_with_my_custom_vertex(
    my_custom_vertex("B", "target" ,3.14, 3.14), g)
  );
}
