#include <string>
#include <boost/graph/properties.hpp>

template <typename graph>
bool has_edge_with_name(
  const std::string& name,
  const graph& g
)
{
  const auto edge_name_map = get(boost::edge_name,g);

  for (auto p = edges(g);
    p.first != p.second;
    ++p.first) {
    if (get(edge_name_map, *p.first) == name) {
      return true;
    }
  }
  return false;
}
