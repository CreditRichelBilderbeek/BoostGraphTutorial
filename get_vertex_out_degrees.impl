#include <vector>

template <typename graph>
std::vector<int> get_vertex_out_degrees(const graph& g) noexcept
{
  std::vector<int> v;
  const auto vis = vertices(g);
  auto i = vis.first;
  const auto j = vis.second;
  for ( ; i!=j; ++i) {
    v.emplace_back(
      out_degree(*i,g) //Not boost::out_degree
    );
  }
  return v;
}
