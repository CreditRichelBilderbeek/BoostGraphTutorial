#include <cassert>
#include <boost/graph/adjacency_list.hpp>

template <typename graph>
void add_edge(graph& g) noexcept
{
  const auto vd_a = boost::add_vertex(g);
  const auto vd_b = boost::add_vertex(g);
  const auto aer = boost::add_edge(
    vd_a, // Source/from
    vd_b, // Target/to
    g
  );

  assert(aer.second);
}
